{
    "name": "mirrord",
    "version": "1.0.0",
    "description": ".mirrord Desktop Client",
    "main": "dist/main/index.js",
    "author": "yodeput@gmail.com",
    "license": "MIT",
    "scripts": {
        "build:renderer": "npx esbuild renderer/scripts/device/app.ts --bundle --outfile=renderer/scripts/device/app.js --platform=browser && npx esbuild renderer/scripts/home/app.ts --bundle --outfile=renderer/scripts/home/app.js --platform=browser",
        "build:css": "npx tailwindcss -i renderer/styles/tailwind.css -o renderer/styles/tailwind.out.css",
        "watch:renderer-device": "npx esbuild renderer/scripts/device/app.ts --bundle --outfile=renderer/scripts/device/app.js --platform=browser --watch",
        "watch:renderer-home": "npx esbuild renderer/scripts/home/app.ts --bundle --outfile=renderer/scripts/home/app.js --platform=browser --watch",
        "watch:css": "npx tailwindcss -i renderer/styles/tailwind.css -o renderer/styles/tailwind.out.css --watch",
        "dev": "yarn run build:renderer && yarn run build:css && npx tsc && npx electron .",
        "dev:watch": "yarn run build:renderer && yarn run build:css && npx concurrently \"npx tsc -w\" \"npx electron .\" \"yarn run watch:renderer-device\" \"yarn run watch:renderer-home\" \"yarn run watch:css\"",
        "build": "npx tsc && yarn run build:renderer && yarn run build:css",
        "start": "electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "dependencies": {
        "electron-log": "^5.0.0"
    },
    "devDependencies": {
        "@types/node": "^20.10.0",
        "autoprefixer": "^10.4.23",
        "concurrently": "^8.2.2",
        "electron": "28",
        "electron-builder": "^24.9.1",
        "esbuild": "^0.27.2",
        "postcss": "^8.5.6",
        "tailwindcss": "3.4.17",
        "typescript": "^5.3.3"
    },
    "build": {
        "appId": "com.mirrord.desktop",
        "productName": "mirrord",
        "directories": {
            "output": "out"
        },
        "files": [
            "dist/**/*",
            "renderer/**/*",
            "resources/**/*"
        ],
        "mac": {
            "target": "dmg",
            "icon": "resources/icon.icns"
        },
        "win": {
            "target": "nsis",
            "icon": "resources/icon.ico"
        },
        "linux": {
            "target": "AppImage",
            "icon": "resources/icon.png"
        },
        "extraResources": [
            {
                "from": "resources/scrcpy-server",
                "to": "resources/scrcpy-server"
            }
        ]
    }
}